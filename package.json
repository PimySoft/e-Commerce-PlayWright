{
  "name": "e-commerce-playwright",
  "version": "1.0.0",
  "description": "Playwright automation tests for e-commerce playground",
  "scripts": {
    "test": "playwright test",
    "test:headless": "playwright test",
    "test:headed": "playwright test --headed",
    "test:chrome": "playwright test --project=chrome",
    "test:chrome:headed": "playwright test --project=chrome --headed",
    "test:firefox": "playwright test --project=firefox",
    "test:firefox:headed": "playwright test --project=firefox --headed",
    "test:safari": "playwright test --project=safari",
    "test:safari:headed": "playwright test --project=safari --headed",
    "test:edge": "playwright test --project=edge",
    "test:edge:headed": "playwright test --project=edge --headed",
    "test:percy": "percy exec -- playwright test tests/percy-visual.spec.ts",
    "test:percy:all": "percy exec -- playwright test"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@percy/cli": "^1.27.4",
    "@percy/playwright": "^1.0.9",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "dotenv": "^17.2.3",
    "typescript": "^5.3.3"
  }
}
